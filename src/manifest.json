{
  "manifest_version": 3,
  "name": "MD Pro",
  "description": "一键将博客文章转换为 Markdown（包含图片）",
  "version": "0.1.0",
  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "action": {
    "default_title": "MD Pro",
    "default_popup": "src/popup/index.html"
  },
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "permissions": ["storage", "downloads", "scripting", "contextMenus", "activeTab", "clipboardWrite"],
  "host_permissions": [],
  "options_page": "src/options/index.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/index.ts"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "export_markdown": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "导出为 Markdown"
    }
  }
}